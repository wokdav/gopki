{
    "$id": "extension.json",
    "type": "object",
    "properties": {
        "optional": {
            "type": "boolean"
        },
        "override": {
            "type": "boolean"
        },
        "subjectKeyIdentifier": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "string",
                    "pattern": "(hash)|(!binary:[A-Za-z0-9+/=]+)"
                }
            },
            "additionalProperties": false
        },
        "keyUsage": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "enum": [
                            "digitalSignature",
                            "nonRepudiation",
                            "keyEncipherment",
                            "dataEncipherment",
                            "keyAgreement",
                            "keyCertSign",
                            "crlSign"
                        ]
                    }
                }
            },
            "additionalProperties": false
        },
        "subjectAlternativeName": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "$ref": "general_name.json"
                    }
                }
            },
            "additionalProperties": false
        },
        "basicConstraints": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "ca": {
                            "type": "boolean"
                        },
                        "pathLen": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "certificatePolicies": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "oid": {
                                "$ref": "oid.json"
                            },
                            "qualifiers": {
                                "type": "array",
                                "items": {
                                    "oneOf": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "cps": {
                                                    "type": "string"
                                                }
                                            },
                                            "additionalProperties": false,
                                            "required": [
                                                "cps"
                                            ]
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "userNotice": {
                                                    "type": "object",
                                                    "properties": {
                                                        "organization": {
                                                            "type": "string"
                                                        },
                                                        "numbers": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "integer"
                                                            }
                                                        },
                                                        "text": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "additionalProperties": false
                                                }
                                            },
                                            "additionalProperties": false,
                                            "required": [
                                                "userNotice"
                                            ]
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "oid"
                        ]
                    }
                }
            },
            "additionalProperties": false
        },
        "authorityInformationAccess": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "ocsp": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        },
        "authorityKeyIdentifier": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "pattern": "(hash)|(!binary:[A-Za-z0-9+/=]+)"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "admission": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "admissionAuthority": {
                            "$ref": "general_name.json"
                        },
                        "admissions": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "admissionAuthority": {
                                        "$ref": "general_name.json"
                                    },
                                    "namingAuthority": {
                                        "$comment": "TODO: Use as $ref",
                                        "type": "object",
                                        "properties": {
                                            "oid": {
                                                "$ref": "oid.json"
                                            },
                                            "url": {
                                                "type": "string"
                                            },
                                            "text": {
                                                "type": "string"
                                            }
                                        },
                                        "additionalProperties": false
                                    },
                                    "professionInfos": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "namingAuthority": {
                                                    "$comment": "TODO: Use as $ref",
                                                    "type": "object",
                                                    "properties": {
                                                        "oid": {
                                                            "$ref": "oid.json"
                                                        },
                                                        "url": {
                                                            "type": "string"
                                                        },
                                                        "text": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "additionalProperties": false
                                                },
                                                "professionItems": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "professionOids": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "oid.json"
                                                    }
                                                },
                                                "registrationNumber": {
                                                    "type": "string"
                                                },
                                                "addProfessionInfo": {
                                                    "type": "string",
                                                    "pattern": "(!binary:[A-Za-z0-9+/=]+)|!null|!empty"
                                                }
                                            },
                                            "required": [
                                                "professionItems"
                                            ]
                                        }
                                    }
                                },
                                "required": [
                                    "professionInfos"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "extendedKeyUsage": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "enum": [
                                    "serverAuth",
                                    "clientAuth",
                                    "codeSigning",
                                    "emailProtection",
                                    "timeStamping",
                                    "OCSPSigning"
                                ]
                            },
                            {
                                "$ref": "oid.json"
                            }
                        ]
                    }
                }
            },
            "additionalProperties": false
        },
        "custom": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "critical": {
                    "type": "boolean"
                },
                "raw": {
                    "$ref": "extension_rawcontent.json"
                },
                "oid": {
                    "$ref": "oid.json"
                }
            },
            "required": [
                "oid",
                "raw"
            ],
            "additionalProperties": false
        }
    },
    "oneOf": [
        {
            "required": [
                "subjectKeyIdentifier"
            ]
        },
        {
            "required": [
                "keyUsage"
            ]
        },
        {
            "required": [
                "subjectAlternativeName"
            ]
        },
        {
            "required": [
                "basicConstraints"
            ]
        },
        {
            "required": [
                "certificatePolicies"
            ]
        },
        {
            "required": [
                "authorityInformationAccess"
            ]
        },
        {
            "required": [
                "authorityKeyIdentifier"
            ]
        },
        {
            "required": [
                "admission"
            ]
        },
        {
            "required": [
                "extendedKeyUsage"
            ]
        },
        {
            "required": [
                "custom"
            ]
        }
    ],
    "additionalProperties": false
}